<!--Proposed Tool Section: [Eco-Metabolomics]-->
<tool id="ecomet_08c_species_variability" name="ecomet_08c_species_variability" version="1.0">
  <requirements>
    <container type="docker">container-registry.phenomenal-h2020.eu/phnmnl/ecomet</container>
  </requirements>
  <description>Show species variability from the MTBLS520 study.</description>
  <stdio>
    <regex match="" source="stderr" level="warning" description="R messages" />
    <exit_code range="1:" level="fatal" description="Tool error" />
  </stdio>
  <command><![CDATA[
mtbls520_08c_species_variability.r $infile1 $outfile1 $outfile2;
  ]]>
  </command>
  <inputs>
    <param name="infile1" type="data" format="rdata" optional="False" label="Input Rdata file" />
  </inputs>
  <outputs>
    <data name="outfile1" type="data" format="pdf" label="Species variability Histogram" />
    <data name="outfile2" type="data" format="pdf" label="Species variability" />
  </outputs>
  <help><![CDATA[
This is the MTBLS520 study.
The study will be published soon. This code is work-in-progress. Do not redistribute unless study published.
Copyright (C) 2017 Kristian Peters - IPB Halle
----
More updates soon
  ]]></help>
</tool>

